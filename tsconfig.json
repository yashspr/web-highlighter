{
    "compilerOptions": {
        "esModuleInterop": true,
        "declaration": true,
        "sourceMap": true,
        "outDir": "./dist",
        "lib": [
            "dom",
            "dom.iterable",
            "es2015"
        ],
        "target": "es5",
        "downlevelIteration": true,
        "resolveJsonModule": true,
        "baseUrl": ".",
        "paths": {
            "@src/*": ["./src/*"]
        },
		"types": []
    },
    "include": [
        "src/**/*",
		"test/**/*"
    ],
	"exclude": [
		"node_modules",
		"./node_modules",
		"./node_modules/*",
		"./node_modules/@types/node/index.d.ts"
	]
}